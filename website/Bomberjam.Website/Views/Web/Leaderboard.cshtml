@model IReadOnlyList<RankedUser>
@{
  ViewData["Title"] = "Leaderboard";
}

<h1>Leaderboard</h1>

<div class="table-responsive">
  <table class="table table-sm table-bordered table-striped">
    <thead>
    <tr>
      <th>Rank</th>
      <th>User</th>
      <th>Points</th>
    </tr>
    </thead>
    <tbody>
    @{
      var rank = 1;
      foreach (var user in Model)
      {
        <tr>
          <td>@(rank++)</td>
          <td>
            <a asp-controller="Web" asp-action="UserDetails" asp-route-userId="@user.Id">@user.UserName</a>
          </td>
          <td><span format-points="@user.Points"></span></td>
        </tr>
      }
    }
    @if (Model.Count == 0)
    {
      <tr><td class="text-center" colspan="3">Ranked players will appear here when there will be at least one game</td></tr>
    }
    </tbody>
  </table>
</div>